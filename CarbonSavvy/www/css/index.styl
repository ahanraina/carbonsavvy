bg = #E7E7E7
txtcol = #353535

aligns(valr)
    text-align: valr
    float: valr

fontstuff(size, color)
    font-family: 'Calibri', Helvetica, sans-serif
    font-size: size
    color: color

body
    -webkit-touch-callout: none
    -webkit-text-size-adjust: none
    -webkit-user-select: none
    background-color: bg
    fontstuff(130%, txtcol)
    aligns(center)
    padding-top: 5%

h1
    fontstuff(160%, txtcol - #11)