bg = #E7E7E7
txtcol = #353535

fontstuff(size, color)
    font-family: 'Calibri', Verdana, Helvetica, sans-serif
    font-size: size
    color: color

body
    -webkit-touch-callout: none
    -webkit-text-size-adjust: none
    -webkit-user-select: none
    background-color: bg
    fontstuff(130%, txtcol)

h1
    fontstuff(160%, txtcol - #11)