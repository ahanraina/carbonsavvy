bg = #E7E7E7
txtcol = #353535
brandcol = #5FD35F

aligns(valr)
    text-align: valr
    float: valr

fontstuff(size, color)
    font-family: 'Calibri', Helvetica, sans-serif
    font-size: size
    color: color

body
    -webkit-touch-callout: none
    -webkit-text-size-adjust: none
    -webkit-user-select: none
    background-color: bg
    fontstuff(130%, txtcol)
    aligns(center)
    padding-top: 5%
    display: block

h1
    fontstuff(160%, txtcol - #11)

input[type=submit], button
    background-color: brandcol
    border: none
    padding: 15px 30px
    text-decoration: none
    display: inline-block
    fontstuff(20px, bg)